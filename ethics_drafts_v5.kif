(<=>
  (instance ?NMFT NoMoralFactsTheory)
  (exists (?MNS)
    (and
      (element ?MNS ?NMFT)
      (equal ?MNS 
        (not exists (?TMT)
          (and
            (instance ?TMT EthicalTheory)
            (forall (?S)
              (=>
