                (instance ?ARG Argument)
                (instance ?IS ImperativeSentence)
                (containsInformation ?IS ?PS)
                (containsInformation ?S P)
                (conclusion ?ARG ?PS)
                (premise ?ARG ?S)))))))

(<=>
  (instance ?DIT DeontologicalImperativeTheory)
  (forall (?S)
    (=>
      (element ?S ?DIT)
      (or
        (instance ?S ImperativeSentence)
