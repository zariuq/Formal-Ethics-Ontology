  (exists (?MT ?MTS)
    (and
      (instace ?MT VirtueEthicsTheory)
      (containsInformation ?MTS ?MP)
      (instance ?MTS VirtueEthicsSentence)
      (equal ?MTS (ListAndFn (SetToListFn ?MT))))))
      
(=> 
