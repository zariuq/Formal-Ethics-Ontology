(=> 
  (instance ?CUT ConsequentialistTheory)
  (forall (?S)
    (=> 
      (element ?S ?CUT)
      (forall (?P ?UF ?FORMULA)
        (=> 
          (and 
            (part ?P ?S)
            (equal ?P (AssignmentFn ?UF ?FORMULA))
            (instance ?FORMULA Formula)
            (instance ?UF UtilityFormulaFn))
          (instance ?UF ConsequentialistUtilityFormulaFn))))))

