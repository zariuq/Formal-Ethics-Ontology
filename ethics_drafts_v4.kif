(=> 
  (and 
    (equal (UtilityToValueJudgmentSentence ?US) VJS)
    (instance ?UF UtilityFormulaFn)
    (equal ?US 
      (and 
        (equal ?SITUATION (SituationFormulaFn ?FORMULA))
