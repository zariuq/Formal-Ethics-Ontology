                (AssignmentFn ?UF (ClassToSetFn ?CBEHAVE))
                (AssignmentFn ?UF (ClassToSetFn ?CBEHAVE2)))))
          (instance ?N Number)
          (or
            (equal ?C greaterThan)
            (equal ?C lessThan)
            (equal ?C greaterThanOrEqualTo)
